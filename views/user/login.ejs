<% layout("./layouts/boilplate" ) %>
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-5">
            <div class="card shadow ">
                <img src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                    alt="">
                <div class="card-body">
                    <h1 class="card-title mb-3">Login</h1>
                    <form class=" needs-validation" action="/login" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username:</label>
                            <input type="text" class="form-control" id="username" placeholder="username" name="username"
                                required>
                            <div class="invalid-feedback">
                                Please provide a valid username here!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="password" placeholder="password"
                                name="password" required>
                            <div class="invalid-feedback">
                                Please provide a valid password here!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">Login</button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>